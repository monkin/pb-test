
.dayList {
    margin: 0 auto;
    padding: 0;
    max-width: 270px;
}

.day {
    list-style: none;
    margin: 0;
    padding: 0;
    padding-top: 16px;
}

.date {
    text-align: center;
    font-size: 24px;
    margin: 16px 0 8px 0;
    opacity: 0.81;
}

.transaction {
    display: flex;
    justify-content: space-between;
    margin: 16px 0;
    font-size: 14px;
    transition: background-color 0.15s;
}
